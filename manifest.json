{
  "manifest_version": 3,
  "name": "Shopee Scraper GUI",
  "version": "1.2",
  "description": "Scrape produk Shopee dengan GUI dan ekspor ke XLSX",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Shopee Scraper"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://shopee.co.id/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["libs/xlsx.full.min.js"],
      "matches": ["https://shopee.co.id/*"]
    }
  ]
}
